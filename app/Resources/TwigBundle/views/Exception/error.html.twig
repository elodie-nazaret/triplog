{% extends '::base.html.twig' %}

{% block body_class %}signup-page{% endblock %}

{% block content %}
    <div class="wrapper">
        <div class="header header-filter" style="background-image: url('http://www.pixelstalk.net/wp-content/uploads/2016/04/Fantasy-Lake-Landscape-Wallpaper-Picture.jpg'); background-size: cover; background-position: top center;">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3" style="margin-top: 80px;">
                        <div class="card card-signup">
                            <div class="header header-danger text-center">
                                <h2 style="font-weight: bold">{{ status_text }}</h2>
                            </div>
                            <div class="content text-center" style="padding: 40px;">
                                <h5 style="font-weight: 500;">{{ exception.message }}</h5>
                                <p class="text-muted">Nous vous invitons à revenir à la <a href="{{ path('homepage') }}">page d'accueil</a> de notre site.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}